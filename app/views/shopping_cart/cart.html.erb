<div class="brdr bgc-fff pad-10 box-shad btm-mrg-20 property-listing">
    <div class="media">
      <% @cart.shopping_cart_items.each do |elem| %>
          <a class="pull-left" href="#" target="_parent">
			         <%= image_tag Article.find(elem.item_id).picture.url,
               class: "img-responsive",
                 size:"150x150" if article.picture? %>
		             </a>
                <div class="clearfix visible-sm"></div>
          <div class="media-body fnt-smaller">
   			      <a href="#" target="_parent"></a>
             			<h3 class="media-heading">
             				<b><%= Article.find(elem.item_id).name %></b>
             			</h3>
                  <ul class="list-inline mrg-0 btm-mrg-10 clr-535353">
            				<li>Prezzo:</li>
            				<li><%= Article.find(elem.item_id).prezzo %></li>
            			</ul>
              <ul class="list-inline mrg-0 btm-mrg-10 clr-535353">
                <li>
        					<div class='set blue'>
        					<%= link_to "Visit", user_market_article_path(article.market.user, article.market, article), class: "btn pri ico" %>
        					</div>
        				</li>
                <li>
        					<div class='set red'>
                    <%= link_to "Delete-art", user_shopping_cart_shopping_cart_item_path(@current_user,@current_user.shopping_cart_id,
                    Article.find(elem.item_id)), method: :delete, data: { confirm: "You sure?" }, class: "btn pri ico" %>
	                 </div>
        				</li>
              </ul>
            </div>
            <% end %>
            <% end %>
          </div>
        </div>

<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
  </aside>
  
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @markets.any? %>
      <ul class="markets follow">
        <%= render @markets %>
      </ul>
      <%= will_paginate @markets %>
    <% end %>
  </div>
</div>

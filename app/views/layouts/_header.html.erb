<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "U-MK make your business", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
		  <% if current_user.vendor? %>
			<li><%= link_to "Bacheca", '#' %></li>
		  <% else %>		
		    <li><%= link_to "Showcase", '#' %></li>
		  <% end %>
		  <li><%= link_to "Messages", '#' %></li>
		  <% if current_user.buyer? %>
			<li><%= link_to "Negozi", followingmarkets_user_path(current_user) %></li>
		  <% else %>		
			<li><%= link_to "Vendors", users_path %></li>
		  <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


